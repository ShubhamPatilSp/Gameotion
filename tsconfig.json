{
  "extends": "@react-native/typescript-config",
  "include": ["src"],
  "compilerOptions": {
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/screens/*": ["src/screens/*"],
      "@/theme/*": ["src/theme/*"],
      "@/styles/*": ["src/styles/*"],
      "@/api/*": ["src/api/*"],
      "@/store/*": ["src/store/*"],
      "@/auth/*": ["src/auth/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/navigation/*": ["src/navigation/*"]
    }
  }
}
